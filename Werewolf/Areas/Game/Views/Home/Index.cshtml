@model IEnumerable<Werewolf.Models.GameUser>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Home Page";
}

@if (SignInManager.IsSignedIn(User))
{
    if (Model.Count() > 0)
    {
        foreach (var game in Model)
        {
            <div class="row"><partial name="_GameItemIndexPartial" model="game" /></div>
        }
    }
    else
    {
        <p>No game started</p>
    }
}

else
{
    <div class="text-center">
        <h1 class="display-4">Welcome to Werewolf</h1>
        <p>Please <a class="align-self-center" asp-area="Identity" asp-page="/Account/Login">Login</a> to play the game.</p>
    </div>
}