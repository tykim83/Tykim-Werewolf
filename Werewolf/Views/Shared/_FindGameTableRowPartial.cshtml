@model Werewolf.Models.ViewModel.FindGameTableRowViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<td class="align-middle">@Model.Game.Name</td>
<td class="align-middle">@Model.TotalRegisteredPlayersForGame[Model.Game.Id] / @Model.Game.PlayerCount</td>
<td class="align-middle">

    @if (Model.AlreadyRegisteredGames != null && Model.AlreadyRegisteredGames.Contains(Model.Game.Id))
    {
        //Remove Registration Button
        <a onclick=quitGame(@Model.Game.Id) class='btn btn-sm btn-outline-danger form-control text-danger' style="cursor: pointer;">
            <i class="fas fa-sign-out-alt"></i> Quit
        </a>
    }
    else
    {
        //Registration Button
        <a onclick=joinGame(@Model.Game.Id) class='btn btn-sm btn-outline-primary form-control text-primary' style="cursor: pointer;">
            <i class="fas fa-sign-in-alt"></i> Join
        </a>
    }
</td>
<td class="align-middle">
    @if (Model.TotalRegisteredPlayersForGame[Model.Game.Id] >= Model.Game.PlayerCount)
    {
        <a onclick=startGame(@Model.Game.Id) class='btn btn-sm btn-outline-success form-control text-primary' style="cursor: pointer;">
            <i class="fas fa-play"></i> Start
        </a>
    }
    else
    {
        <a class='btn btn-sm btn-outline-secondary form-control text-primary' style="cursor: pointer;">
            <i class="fas fa-hourglass-half"></i> Waiting
        </a>
    }
</td>